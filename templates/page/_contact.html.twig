<section id="contact">
	<div class="container">
		<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
			<div class="sec-title text-center">
				<h2>Contact</h2>
				<p class="text-center">Vous pouvez me contacter en remplissant ce formulaire ou directement sur mon adresse
					mail, je vous rÃ©pondrai dans les meilleurs dÃ©lais<br />
					<a href="mailto:virginia.atenza@gmail.com">virginia.atenza@gmail.com</a>
				</p>
				<div class="devider" style="font-size: 16px;">
					ðŸ‘‹
				</div>
			</div>
		</div>
		<div class="box-shadow-full">
			<div class="row">
				<div class="col-sm-12">
					{% for message in app.flashes('success')%}
					<div class="alert alert-success" role="alert">
						{{ message }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					{% endfor %}

					{% if not form.vars.valid %}
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						Erreurs dans le formulaire !
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					{% endif %}
					<div id="contactForm">
						{{ form_start(form, { 'attr': {'novalidate': 'novalidate'}})}}
						<fieldset>
							<div class="row">
								<div class="col-xs-6 col-md-6">{{form_row(form.firstname)}}</div>
								<div class="col-xs-6 col-md-6">{{form_row(form.lastname)}}</div>
							</div>
							<div class="row">
								<div class="col-xs-6 col-md-6">{{form_row(form.phone)}}</div>
								<div class="col-xs-6 col-md-6">{{form_row(form.email)}}</div>
							</div>
							{{form_rest(form)}}
							<div class="form-group d-flex justify-content-center mt-4">
								<button class="btn my-btn btn-sep icon-send">Envoyer</button>
							</div>
						</fieldset>
						{{ form_end(form)}}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!--/ Section Contact End /-->


